{
  "manifest_version": 3,
  "name": "Leet2Git",
  "version": "1.0.0",
  "description": "Sync LeetCode solutions to GitHub repositories automatically",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Leet2Git - Sync LeetCode to GitHub"
  },
  "options_page": "src/options/index.html",
  "content_scripts": [
    {
      "js": [
        "assets/content.ts-loader.js",
        "assets/leetcode-hook.ts-loader.js"
      ],
      "matches": [
        "https://leetcode.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "tabs",
    "webRequest",
    "scripting"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*",
    "https://leetcode.com/*"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://leetcode.com/*"
      ],
      "resources": [
        "assets/content.js",
        "assets/leetcodeHook.js"
      ],
      "use_dynamic_url": true
    }
  ]
}
